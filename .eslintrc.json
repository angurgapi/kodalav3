{
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": [
      "error",
      {
        "ignores": ["Loader"]
      }
    ],
    "vue/html-self-closing": "off"
  }
}
